
@{
    ViewData["Title"] = "Add Employee";
}

<h2 id="view-add-employee">Add Employee</h2>

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">First Name</label>
            <input type="text" class="form-control txt-fname">
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">Last Name</label>
            <input type="text" class="form-control txt-lname">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="" class="font-size-12px">Birth date</label>
            <div class="input-group date" data-provide="datepicker">
                <input type="text" class="form-control txt-bdate input-readonly" readonly>
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="price">Age</label>
            <input type="number" class="form-control txt-age" id="age" min="1">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="sel1">Civil Status:</label>
            <select class="form-control status-list" id="status">
                <option value="1">Single</option>
                <option value="2">Married</option>
            </select>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">Languages Spoken</label>
            <input type="text" class="form-control txt-language">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">Country</label>
            <input type="text" class="form-control txt-country">
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">State</label>
            <input type="text" class="form-control txt-state">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">Phone number</label>
            <input type="text" class="form-control txt-phone">
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="name">Address</label>
            <input type="text" class="form-control txt-address">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="" class="font-size-12px">Hire date</label>
            <div class="input-group date" data-provide="datepicker">
                <input type="text" class="form-control txt-hdate input-readonly" readonly>
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="sel1">Department:</label>
            <select class="form-control department" id="department-id">
                <option value="1">Production Team</option>
                <option value="2">Human Resourse</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="sel1">Gender:</label>
            <select class="form-control gender" id="gender-id">
                <option value="1">Male</option>
                <option value="2">Female</option>
            </select>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <label for="lbl-hobbies">Hobbies and Interests</label>
            <textarea class="form-control txt-hobbies" id="txt-hobbies" rows="1"></textarea>
        </div>
    </div>
</div>
<div class="row">
 
    <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="form-group">
            <h5>Employee Personal Settings</h5>
            <div class="panel panel-default">
                <div class="panel-body">
                    <input type="checkbox" id="chkBday">  Hide Birthday<br>
                    <input type="checkbox" id="chkAge">  Hide Age<br>
                    <input type="checkbox" id="chkHobbiesI">  Hide Hobbies and Interest<br>
                    <input type="checkbox" id="chkCS">  Hide Civil Status<br>
                    <input type="checkbox" id="chkAddress">  Hide Address<br>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row btn-action">
    <span hidden class="empId">0</span>
    <span hidden class="empSettingsId">0</span>
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-2">
            <div class="form-group">
                <a href="#" class="btn btn-primary btn-primary btn-save-employee">Save Employee</a>
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2">
            <div class="form-group">
                <a href="#" class="btn btn-primary btn-primary btn-update-employee">Update Employee</a>
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2">
            <div class="form-group">
                <a href="#" class="btn btn-primary btn-primary btn-delete-employee">Delete Employee</a>
            </div>
        </div>
    </div>
</div>